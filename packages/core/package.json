{
  "name": "@boilerplate-api/core",
  "version": "1.0.2",
  "description": "A flexible and type-safe HTTP client library for both browser and Node.js environments with built-in retry logic, authentication, and error handling",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "require": "./dist/client/index.js",
      "import": "./dist/client/index.mjs"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "require": "./dist/server/index.js",
      "import": "./dist/server/index.mjs"
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn clean && tsup",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "size-check": "bundlesize"
  },
  "author": "Monster Codes",
  "keywords": [
    "api",
    "http-client",
    "fetch",
    "typescript",
    "browser",
    "nodejs",
    "rest-client",
    "retry-logic",
    "authentication",
    "boilerplate",
    "universal",
    "isomorphic"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/monzter50/boilerplate-api-core-library.git"
  },
  "homepage": "https://github.com/monzter50/boilerplate-api-core-library#readme",
  "bugs": {
    "url": "https://github.com/monzter50/boilerplate-api-core-library/issues"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/monzter50"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsup": "^8.2.4",
    "tsx": "^4.19.4",
    "typescript": "^5.6.2",
    "prettier": "^3.0.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  },
  "bundlesize": [
    {
      "path": "./dist/index.js",
      "maxSize": "10KB"
    },
    {
      "path": "./dist/index.mjs",
      "maxSize": "8KB"
    }
  ]
}
