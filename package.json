{
  "name": "boilerplate-api-monorepo",
  "version": "1.0.2",
  "description": "A monorepo for flexible and type-safe HTTP client library with examples",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@1.22.1",
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "dev": "turbo run dev --parallel",
    "version": "changeset version",
    "release": "yarn run build && changeset publish",
    "example:server": "tsx examples/server/server-example.ts",
    "example:client:build": "tsup examples/client/web-example.ts --format iife --out-dir examples/client/dist --no-splitting --global-name webExample --no-dts --clean",
    "example:client:serve": "http-server examples/client -o -c-1",
    "precommit": "yarn lint && yarn type-check && yarn test",
    "prepare": "husky install || true"
  },
  "author": "Monster Codes",
  "keywords": [
    "api",
    "http-client",
    "fetch",
    "typescript",
    "browser",
    "nodejs",
    "rest-client",
    "retry-logic",
    "authentication",
    "boilerplate",
    "universal",
    "isomorphic"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/monzter50/boilerplate-api-core-library.git"
  },
  "homepage": "https://github.com/monzter50/boilerplate-api-core-library#readme",
  "bugs": {
    "url": "https://github.com/monzter50/boilerplate-api-core-library/issues"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/monzter50"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^8.57.1",
    "http-server": "^14.1.1",
    "tsx": "^4.19.4",
    "typescript": "^5.6.2",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8"
  },
  "overrides": {
    "string-width": "^4.2.3"
  },
  "resolutions": {
    "string-width": "^4.2.3"
  }
}
